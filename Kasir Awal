#include <iostream>
#include <iomanip>
using namespace std;

struct Barang {
    string nama;
    int jumlah;
    float harga;
};

int main() {
    int jumlahBarang;
    float total = 0;

    cout << "=== Selamat Datang di Toko Kami ===" << endl;
    cout << "Masukkan jumlah barang yang dibeli: ";
    cin >> jumlahBarang;

    Barang daftarBarang[jumlahBarang];

    for (int i = 0; i < jumlahBarang; i++) {
        cout << "\nBarang ke-" << i + 1 << endl;
        cout << "Nama Barang: ";
        cin.ignore(); 
        getline(cin, daftarBarang[i].nama);
        cout << "Jumlah: ";
        cin >> daftarBarang[i].jumlah;
        cout << "Harga satuan: ";
        cin >> daftarBarang[i].harga;

        total += daftarBarang[i].jumlah * daftarBarang[i].harga;
    }

    cout << "\n=== Struk Pembelian ===" << endl;
    cout << left << setw(20) << "Nama Barang"
         << setw(10) << "Jumlah"
         << setw(15) << "Harga"
         << setw(15) << "Total" << endl;

    for (int i = 0; i < jumlahBarang; i++) {
        float subtotal = daftarBarang[i].jumlah * daftarBarang[i].harga;
        cout << left << setw(20) << daftarBarang[i].nama
             << setw(10) << daftarBarang[i].jumlah
             << setw(15) << daftarBarang[i].harga
             << setw(15) << subtotal << endl;
    }

    cout << "\nTotal Bayar: Rp " << fixed << setprecision(2) << total << endl;

    return 0;
}
